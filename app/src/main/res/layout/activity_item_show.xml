<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cebs.foodkart.ItemShow">




    <ListView
        android:id="@+id/item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/number"
        android:textSize="30dp"
        android:text="0"
        android:layout_below="@id/item_list"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDecrease"
        android:textSize="30dp"
        android:text="-"
        android:layout_marginLeft="0dp"
        android:layout_below="@id/item_list"

        android:background="#C62828" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnIncrease"
        android:textSize="30dp"
        android:text="+"
        android:background="#C62828"
        android:layout_below="@+id/item_list"
        android:layout_alignEnd="@+id/item_list" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/Total"

        android:text="TOTAL"
        android:layout_marginTop="50dp"
        android:layout_below="@id/btnDecrease"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/Amount"
        android:text="Zero"
        android:layout_alignEnd="@id/btnIncrease"
        android:layout_marginTop="50dp"
        android:layout_below="@id/btnDecrease"
        android:layout_marginLeft="100dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD TO BASKET"
        android:id="@+id/btnBasket"
        android:textSize="30dp"
        android:layout_below="@id/Amount"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cartsize"
        android:background="@drawable/shape"
        android:layout_below="@+id/btnBasket"
        android:layout_alignParentEnd="true"
        android:text="0"
        android:textSize="40dp"/>




</RelativeLayout>

</ScrollView>